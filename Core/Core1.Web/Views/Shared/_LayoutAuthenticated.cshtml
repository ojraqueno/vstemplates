@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Configuration["AppMetadata:Name"] - Core.Web</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bulma/css/bulma.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/shared/app.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css"
              asp-fallback-href="~/lib/bulma/css/bulma.min.css" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
              asp-fallback-href="~/lib/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/shared/app.min.css" asp-append-version="true" />
    </environment>
</head>
<body class="sf-site">
    <nav class="navbar is-dark" role="navigation" aria-label="main navigation">
        <div class="container">
            <div class="navbar-brand">
                <a class="navbar-item" href="">
                    <img src="https://bulma.io/images/bulma-logo-white.png" alt="@String.Format("{0} Logo", Configuration["AppMetadata:Name"])" width="112" height="28">
                </a>
                <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>
            <div class="navbar-menu">
                <div class="navbar-start">
                    <a class="navbar-item" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="navbar-item" asp-controller="Home" asp-action="About">About</a>
                    <a class="navbar-item" asp-controller="Home" asp-action="Contact">Contact</a>
                </div>
                <div class="navbar-end">
                    <div class="navbar-item">
                        <div class="field is-grouped">
                            <p class="control">
                                <a class="button is-primary" href="/Accounts/Login">
                                    <span class="icon">
                                        <i class="fa fa-sign-in" aria-hidden="true"></i>
                                    </span>
                                    <span>Login</span>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container sf-site-content">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="content has-text-centered">
            <p>
                &copy; @DateTime.UtcNow.Year - Core.Web
            </p>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/vue/dist/vue.js"></script>
        <script src="~/lib/axios/dist/axios.js"></script>
        <script src="~/lib/lodash/lodash.js"></script>
        <script src="~/lib/vee-validate/dist/vee-validate.js"></script>
        <script src="~/js/shared/app.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.16/vue.min.js"
                asp-fallback-src="~/lib/vue/dist/vue.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js"
                asp-fallback-src="~/lib/axios/dist/axios.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.10/lodash.min.js"
                asp-fallback-src="~/lib/lodash/lodash.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/vee-validate/2.0.9/vee-validate.min.js"
                asp-fallback-src="~/lib/vee-validate/dist/vee-validate.min.js"></script>
        <script src="~/js/shared/app.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("scripts", required: false)
</body>
</html>