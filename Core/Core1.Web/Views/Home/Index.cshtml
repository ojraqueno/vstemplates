@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutAnonymous";
}

<secion class="hero is-large is-light is-bold">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="columns">
                <div class="column is-6 is-offset-3">
                    <h1 class="title is-1">
                        @Configuration["AppMetadata:Name"]
                    </h1>
                    <h2 class="subtitle is-4">
                        A starter template for building modern web applications.
                    </h2>
                </div>
            </div>
        </div>
    </div>
</secion>
<section class="hero is-medium">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="columns">
                <div class="column">
                    <h1 class="title is-1">Made with Technologies You Love</h1>
                </div>
            </div>
            <hr class="hr" />
            <div class="columns">
                <div class="column">
                    <article class="media">
                        <figure class="media-left">
                            <p class="image is-96x96">
                                <img src="~/images/dotnetcore-logo.png" />
                            </p>
                        </figure>
                        <div class="media-content">
                            <div class="content">
                                <h4 class="title is-4">ASP.NET Core</h4>
                                <p>
                                    ASP.NET Core is a cross-platform framework for building modern web applications.
                                </p>
                            </div>
                            <nav class="level is-mobile">
                                <div class="level-left">
                                    <a class="level-item" href="https://docs.microsoft.com/en-us/aspnet/core/" target="_blank">
                                        Learn More<span class="icon"><i class="fa fa-external-link"></i></span>
                                    </a>
                                </div>
                            </nav>
                        </div>
                    </article>
                </div>
                <div class="column">
                    <article class="media">
                        <figure class="media-left">
                            <p class="image is-96x96">
                                <img src="~/images/vuejs-logo.png" />
                            </p>
                        </figure>
                        <div class="media-content">
                            <div class="content">
                                <h4 class="title is-4">Vue.js</h4>
                                <p>
                                    Vue.js is a progressive framework for building user interfaces.
                                </p>
                            </div>
                            <nav class="level is-mobile">
                                <div class="level-left">
                                    <a class="level-item" href="https://vuejs.org/" target="_blank">
                                        Learn More<span class="icon"><i class="fa fa-external-link"></i></span>
                                    </a>
                                </div>
                            </nav>
                        </div>
                    </article>
                </div>
                <div class="column">
                    <article class="media">
                        <figure class="media-left">
                            <p class="image is-96x96">
                                <img src="~/images/bulma-logo.png" />
                            </p>
                        </figure>
                        <div class="media-content">
                            <div class="content">
                                <h4 class="title is-4">Bulma</h4>
                                <p>
                                    Bulma is a modern CSS framework based on Flexbox.
                                </p>
                            </div>
                            <nav class="level is-mobile">
                                <div class="level-left">
                                    <a class="level-item" href="https://bulma.io/" target="_blank">
                                        Learn More<span class="icon"><i class="fa fa-external-link"></i></span>
                                    </a>
                                </div>
                            </nav>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </div>
</section>